 <div id="sudoku">
<form action="/" method="post">
<% 3.times do |row| %>
  <div class='row'>
    <% 3.times do |box| %>
      <div class='box' %>
        <% 3.times do |cell_row| %>
          <div class='cell-row'>
            <% 3.times do |cell| %>
               <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
 <button name="check">Check solution</button>
 <button name="save">Save game</button>

</form>
</div>


<form action="/solution" method="get">
   <button>Reveal solution</button>
</form>

<form action="/restart" method="get">
   <button>Restart game</button>
</form>


<form action="/neweasygame" method="get">
   <button>New easy game</button>
</form>

<form action="/newhardgame" method="get">
   <button>New hard game</button>
</form>

<form action="/help" method="get">
   <button>Help</button>
</form>


   </div>

