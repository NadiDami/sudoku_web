</form>

<form action="/help" method="get">
   <button class="big-button sidebar">Help</button>
</form>

 <div id="sudoku">
<form action="/" method="post">
<% 3.times do |row| %>
  <div class='row'>
    <% 3.times do |box| %>
      <div class='box' %>
        <% 3.times do |cell_row| %>
          <div class='cell-row'>
            <% 3.times do |cell| %>
               <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
 <button name="check">Check Progress</button>
 <button name="save">Save Progress</button>

</form>
 <form action="/solution" method="get">
   <button>Reveal Solution</button>
</form>
</div>

<br>


<form action="/restart" method="get">
   <button class="big-button">Restart Current Game</button>
</form>



